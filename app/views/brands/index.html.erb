 <head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<body>
<div class="container text-center">
    <h1>Lista de Marcas</h1>
    <div class="row"> 
      <div class="col col-md-6 col-md-offset-3">
        <table class="table table-striped">
          <tr>
            <th style="text-align: center;">Marca</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= brand.name %></td>
            <td><%= link_to 'Mostrar', brand_path(brand) %></td>
    	      <td><%= link_to 'Editar', edit_brand_path(brand) %></td>
            <td><%= link_to 'Eliminar', brand_path(brand),
                  method: :delete,
                  data: { confirm: '¿Está seguro que desea eliminar esta marca?' } , :class => "text-danger" %></td>
          </tr>
        <% end %> 
        </table>
      </div>
    </div>
    <div class="row">
      <%= link_to 'Nueva marca', new_brand_path, :class => "btn btn-primary" %> 
      <%= link_to 'Menú principal', index_home_path,:class => "btn btn-primary" %>
    </div>
  </div>
</div>




<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>